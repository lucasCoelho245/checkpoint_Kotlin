<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/system_title"
        android:layout_width="344dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="Qual sistema operacional você prefere?"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/android_button"
        android:layout_width="248dp"
        android:layout_height="49dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:text="android"
        app:flow_horizontalAlign="center"
        app:layout_constraintStart_toStartOf="@id/system_title"
        app:layout_constraintTop_toBottomOf="@id/system_title" />

    <Button
        android:id="@+id/ios_button"
        android:layout_width="248dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Ios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/android_button" />
    <TextView
        android:id="@+id/system_choice"
        android:layout_width="344dp"
        android:layout_height="53dp"
        android:layout_marginTop="32dp"
        android:text="Qual sistema operacional você prefere?"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>